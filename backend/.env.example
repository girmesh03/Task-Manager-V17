# Database
MONGODB_URI=mongodb://localhost:27017/task-manager
MONGODB_URI_TEST=mongodb://localhost:27017/task-manager-test

# Server
PORT=4000
NODE_ENV=development
CLIENT_URL=http://localhost:3000
APP_NAME=Task Manager

# JWT Secrets (min 32 characters)
JWT_ACCESS_SECRET=replace-with-32-char-min-secret
JWT_REFRESH_SECRET=replace-with-32-char-min-secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# You can use either SMTP_USER/SMTP_PASS or EMAIL_USER/EMAIL_PASSWORD
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=Task Manager <noreply@taskmanager.com>

# Seed Data
INITIALIZE_SEED_DATA=false

# Platform Organization Seed (optional)
PLATFORM_ORGANIZATION_NAME=Task Manager Platform
PLATFORM_ORGANIZATION_DESCRIPTION=Platform organization for managing the SaaS
PLATFORM_ORGANIZATION_EMAIL=platform@example.com
PLATFORM_ORGANIZATION_PHONE=+251900000000
PLATFORM_ORGANIZATION_ADDRESS=Addis Ababa
PLATFORM_ORGANIZATION_SIZE=Small
PLATFORM_ORGANIZATION_INDUSTRY=Technology

PLATFORM_DEPARTMENT_NAME=Platform Administrator
PLATFORM_DEPARTMENT_DESCRIPTION=Responsible for platform operations

PLATFORM_ADMIN_FIRST_NAME=Platform
PLATFORM_ADMIN_LAST_NAME=Admin
PLATFORM_ADMIN_POSITION=System Owner
PLATFORM_ADMIN_ROLE=SuperAdmin
PLATFORM_ADMIN_EMAIL=platform.admin@example.com
PLATFORM_ADMIN_PASSWORD=replace-with-strong-password

# Cloudinary (optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Logging (optional)
LOG_LEVEL=info
